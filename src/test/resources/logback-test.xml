
<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss} [%thread] %-5level %logger - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Root logger a INFO (default) -->
    <root level="INFO">
        <appender-ref ref="STDOUT"/>
    </root>

    <!-- enabling DEBUG level for it.eng packages -->
    <logger name="it.eng" level="DEBUG"/>
</configuration>